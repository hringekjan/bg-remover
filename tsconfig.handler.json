{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["node"],
    "typeRoots": ["./src/@types", "./node_modules/@types", "../../node_modules/@types"]
  },
  "include": ["src/**/*.ts", "src/lib/**/*.ts", "src/handlers/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts", "**/__tests__/**", "*.py"]
}
